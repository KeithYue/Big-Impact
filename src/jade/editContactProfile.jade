form.form-horizontal
  fieldest
    h3 Edit Contact Information
    .row.border
      div.span4.control-group
        label.editContactControlLabel(for="mobile_country_code") Country code:
        div.controlss
          input.span2.input-xlarge(name="mobile_country_code",type="text",value="#{mobile_country_code}")
      div.span4.control-group
        label.editContactControlLabel(for="mobile") Mobile:
        div.controlss
          input.span2.input-xlarge(name="mobile",type="text",value="#{mobile}")
    .row.border
      div.span4
        div.center Mail(Home)
        br
        div.control-group
          label.editContactControlLabel(for="home_country") Country:
          div.controlss
            select.span2(name="home_country",type="text",value="#{home_country}")
              -var countrys = ["","America"]
              each country in countrys
                option=country
        div.control-group
          label.editContactControlLabel(for="home_state") State:
          div.controlss
            select.span2(name="home_state",type="text",value="#{home_state}")
              -var states = ["","AL","AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY"]
              each state in states
                option=state
        div.control-group
          label.editContactControlLabel(for="home_city") City:
          div.controlss
            select.span2(name="home_city",type="text",value="#{home_city}")
              -var cities=["","LosAngeles","Hollywood","Alhambra","Anaheim","BeverleyHills","BigBearCity","Compton","CostaMesa","Malibu","Malibu","MarinadelRey","MontereyPark","Pasadena","Pomona","Riverside","Rosemead","SanBernardino","SanFernandoValley","SanGabriel","SantaAna","SantaMonica","Torrance","SanFrancisco","Oakland","RedwoodCity","Fremont","Cupertino","SanJosé","Bakersfield","Eureka","Fresno","LakeTahoe","Reddings","Sacramento","SanDiego","Stockton","Ukiah",]
              each city in cities
                option=city
        div.control-group
          label.editContactControlLabel(for="home_street") Street:
          div.controlss
            input.span2.input-xlarge(name="home_street", type="text",value="#{home_street}")
        div.control-group
          label.editContactControlLabel(for="home_zip") Postal Code:
          div.controlss
            input.span2.input-xlarge(name="home_zip", type="text",value="#{home_zip}")
