              -var cities=["","LosAngeles","Hollywood","Alhambra","Anaheim","BeverleyHills","BigBearCity","Compton","CostaMesa","Malibu","Malibu","MarinadelRey","MontereyPark","Pasadena","Pomona","Riverside","Rosemead","SanBernardino","SanFernandoValley","SanGabriel","SantaAna","SantaMonica","Torrance","SanFrancisco","Oakland","RedwoodCity","Fremont","Cupertino","SanJosé","Bakersfield","Eureka","Fresno","LakeTahoe","Reddings","Sacramento","SanDiego","Stockton","Ukiah",]
