form.form-horizontal.well(method='post', action='/login')
  fieldset
    legend Login
    .control-group.error
      .controls
    .control-group
      label.control-label(for='email') Email
      .controls
        input.input-medium(name='email',type='email',placeholder='Email')
    .control-group
      label.control-label(for='password') Password
      .controls
        input.input-medium(name='password',type='password',placeholder='Password')
    .control-group
      label.control-label(for='is-admin') I'm admin
      .controls
        input(type='checkbox',name='isAdmin')
    .control-group
      .controls
        button#login.btn(type='submit') Login

